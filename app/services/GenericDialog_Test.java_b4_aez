public class GenericDialog_Test extends PlugInFrame implements DialogListener{ 

 public GenericDialog_Test() { 
   super("Testing"); 
 } 
 
 
 public boolean dialogItemChanged(GenericDialog gd, java.awt.AWTEvent e)
 {
     return false;
 }

 public void run(String arg) { 
  boolean validInputs = false;
  
  GenericDialog dialog = new GenericDialog("Tools");
  while (!validInputs) { 

   String choices[] = new String[2];
   choices[0] = "Yes";
   choices[1] = "No";
   dialog.addChoice("Zoom to selection?", choices, "-");
   validInputs = true;
   dialog.addDialogListener(this);
   dialog.showDialog(); 

   if (dialog.wasCanceled()) return; 

  } 
  
  String choice = dialog.getNextChoice();
  
  if(choice.equals("Yes"))
  {
      IJ.run("To Selection");
  }

  //Of course, here I would call a function to do calculations 
  IJ.showMessage("Inputs was " + choice); 
  return; 
  } 
} 